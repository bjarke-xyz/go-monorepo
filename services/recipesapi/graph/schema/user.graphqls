

extend type Query {
  me: User! @hasRole(role: USER)
}

extend type Mutation {
  signIn(email: String!, password: String!): Token!
  signUp(email: String!, password: String!): Token! 
}

directive @hasRole(role: Role!) on FIELD_DEFINITION
enum Role {
  ADMIN
  USER
  ANON
}

type User {
  id: ID!
  name: String!
  email: String!
}

type Token {
  token: String!
}